{{!-- Main Content Container --}}
<main id="view-workouts">
    <div id="container">
        <div class="row mt-4">
            <h4 class="completed-workout-name">{{workout_date}} - {{category}}</h4>

            <button class="delete-workout btn bye-btn" data-id="{{id}}"><i class="fas fa-trash-alt"></i> Delete
                Workout</button>

            <p class="mt-1">
                <a class="btn" data-toggle="collapse" href="#workout-{{id}}" role="button" aria-expanded="false"
                    aria-controls="workout-{{id}}">
                    View Details
                </a>
            </p>

            <div class="collapse" id="workout-{{id}}">
                <div class="m-0 card card-body">
                    <p>Distance: {{distance}}</p>
                    <p>Duration: {{duration}}</p>
                    <p>Workout Date: {{workout_date}}</p>
                </div>
            </div>

            <hr>
        </div>
    </div>
</main>