<div class="card" style="width: 400px;">
    <img src="assets/logo.png" class="card-img-top">
    <div id="signup" role="tabpanel">
        <form id="signup-form" class="card-body">
            <div>
                <h5>Sign Up</h5> <br>
                <label for="email-input-signup">Email:</label><br>
                <input type="text" id="email-input-signup" />
            </div>

            <!--Password Sign-Up-->
            <div>
                <label for="password-input-signup">Password(must be 8 characters)</label>
                <input type="password" id="password-input-signup" />
            </div>
            <!--End Password Sign-Up-->

            <!--Sign-Up Button-->
            <div class="card-footer text-center">
                <button type="submit" id="signup-btn" class="btn btn-theme"><a href="/login">Sign Up</button>
                <!--End Sign-Up Button-->

                <!--Back to Login page-->
                <a href="/login" class="btn btn-primary">Return to Login</a>
                <!--Back to Login Page-->
            </div>
        </form>
    </div>
</div>